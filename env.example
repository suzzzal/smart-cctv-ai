# Environment Configuration for CCTV AI Monitor

# Database Configuration
DATABASE_URL=postgresql://cctv_user:cctv_password@localhost:5432/cctv_monitor
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=cctv-monitor@yourdomain.com

# Webhook URLs for Authority Notifications
POLICE_WEBHOOK_URL=https://api.police.gov/webhook/incidents
FIRE_DEPARTMENT_WEBHOOK_URL=https://api.fire.gov/webhook/emergencies
TRAFFIC_AUTHORITY_WEBHOOK_URL=https://api.traffic.gov/webhook/violations
MUNICIPAL_WEBHOOK_URL=https://api.municipal.gov/webhook/issues

# SMS Configuration
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/send
EMERGENCY_SMS_CONTACTS=+1234567890,+0987654321

# AI Model Configuration
AI_MODEL_PATH=./ai-models/
DETECTION_CONFIDENCE_THRESHOLD=0.7
PROCESSING_INTERVAL_SECONDS=1

# Video Processing Configuration
MAX_CONCURRENT_STREAMS=10
VIDEO_BUFFER_SIZE=100
SNAPSHOT_QUALITY=85
THUMBNAIL_SIZE=320x240

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/cctv-monitor.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE=100MB

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Development Configuration
DEBUG=false
RELOAD_ON_CHANGE=true
TEST_MODE=false
